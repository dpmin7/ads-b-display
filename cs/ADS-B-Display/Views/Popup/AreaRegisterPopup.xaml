<Window
    x:Class="ADS_B_Display.Views.Popup.AreaRegisterPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ADS_B_Display.Views.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AreaRegisterPopup"
    Width="260"
    Height="386"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <TextBlock
                Width="80"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Area Name:" />
            <TextBox
                Name="tbAreaName"
                Width="Auto"
                Height="25"
                Margin="10,10,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Text="No Name" />
        </DockPanel>
        <Grid Grid.Row="1">
            <!--<dxe:ColorEdit
                x:Name="areaColor"
                Grid.Row="1"
                Margin="10"
                dx:ThemeManager.Theme="Office2019Colorful"
                BorderBrush="Transparent"
                ChipSize="Medium"
                ColumnCount="10"
                DefaultColor="Orange"
                MoreColorsButtonContent="Color picker"
                ShowNoColorButton="True" />-->
        </Grid>

        <UniformGrid
            Grid.Row="2"
            Margin="10"
            Columns="2"
            Rows="1">
            <Button
                Margin="0,0,4,0"
                Padding="4"
                VerticalAlignment="Top"
                Click="OK_Click"
                Content="OK" />
            <Button
                Margin="4,0,0,0"
                Padding="4"
                VerticalAlignment="Top"
                Click="Cancel_Click"
                Content="Cancel" />
        </UniformGrid>
    </Grid>
</Window>
