<Window
    x:Class="ADS_B_Display.Views.Popup.BigQueryListPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ADS_B_Display.Views.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BigQueryListPopup"
    Height="400"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid
            x:Name="bigQueryList"
            Grid.Row="1"
            Width="80"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            GridLinesVisibility="Horizontal"
            HeadersVisibility="Column"
            IsReadOnly="True"
            RowHeaderWidth="0"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Query Name" />
                <!--<DataGridTextColumn
                    Width="2*"
                    Binding="{Binding StartTime, StringFormat='HH:mm:ss'}"
                    Header="Query Description" />
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding EndTime, StringFormat='HH:mm:ss'}"
                    Header="Created By" />
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding Duration, StringFormat='hh\\:mm\\:ss'}"
                    Header="Created On" />-->
            </DataGrid.Columns>
        </DataGrid>
        <UniformGrid
            Grid.Row="2"
            Margin="10"
            Columns="2"
            Rows="1">
            <Button
                Margin="0,0,4,0"
                Padding="4"
                VerticalAlignment="Top"
                Click="OK_Click"
                Content="Open" />
            <Button
                Margin="4,0,0,0"
                Padding="4"
                VerticalAlignment="Top"
                Click="Cancel_Click"
                Content="Cancel" />
        </UniformGrid>
    </Grid>
</Window>
