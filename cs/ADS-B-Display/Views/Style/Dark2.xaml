<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  ─── 메타데이터 ───  -->
    <sys:String x:Key="Theme.Name">Dark.TartanRed</sys:String>
    <sys:String x:Key="Theme.Origin">YourAssembly</sys:String>
    <sys:String x:Key="Theme.DisplayName">CMU Dark</sys:String>
    <sys:String x:Key="Theme.BaseColorScheme">Dark</sys:String>
    <sys:String x:Key="Theme.ColorScheme">TartanRed</sys:String>
    <Color x:Key="Theme.PrimaryAccentColor">#FFA6192E</Color>
    <!--  CMU Red  -->

    <!--  ─── Accent 계열 (투명도만 바꾼 버전) ───  -->
    <Color x:Key="MahApps.Colors.AccentBase">#FFA6192E</Color>
    <Color x:Key="MahApps.Colors.Accent">#CCA6192E</Color>
    <!--  80 %  -->
    <Color x:Key="MahApps.Colors.Accent2">#99A6192E</Color>
    <!--  60 %  -->
    <Color x:Key="MahApps.Colors.Accent3">#66A6192E</Color>
    <!--  40 %  -->
    <Color x:Key="MahApps.Colors.Accent4">#33A6192E</Color>
    <!--  20 %  -->

    <!--  하이라이트(호버 색) – 살짝 밝은 톤  -->
    <Color x:Key="MahApps.Colors.Highlight">#FFC41230</Color>

    <!--  필수 브러시  -->
    <SolidColorBrush
        x:Key="MahApps.Brushes.ThemeBackground"
        options:Freeze="True"
        Color="#FF2E2E2E" />
    <SolidColorBrush
        x:Key="MahApps.Brushes.ThemeForeground"
        options:Freeze="True"
        Color="#FFFFFFFF" />
    <SolidColorBrush
        x:Key="MahApps.Brushes.ShowcaseBrush"
        options:Freeze="True"
        Color="{StaticResource Theme.PrimaryAccentColor}" />
</ResourceDictionary>