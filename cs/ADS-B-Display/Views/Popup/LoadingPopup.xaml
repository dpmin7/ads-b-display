<Window x:Class="ADS_B_Display.Views.Popup.LoadingPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADS_B_Display.Views.Popup"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="LoadingPopup" Height="100" Width="160">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="0 20 0 0" Text="Connecting..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Cancel" Margin="14 20 14 0" Click="Button_Click"/>
    </StackPanel>
</Window>
