<Window x:Class="ADS_B_Display.Views.CPAConflictDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CPA Conflict List" Height="400" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- DataGrid for CPA Conflicts -->
        <DataGrid x:Name="CpaDataGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Grid.Row="0"
                  Margin="0,0,0,10"
                  MouseDoubleClick="CpaDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40"/>
                <DataGridTextColumn Header="HexAddr1" Binding="{Binding HexAddr1}" Width="*"/>
                <DataGridTextColumn Header="HexAddr2" Binding="{Binding HexAddr2}" Width="*"/>
                <DataGridTextColumn Header="TCPA"
                    Binding="{Binding TCPA_Seconds, StringFormat={}{0:F2} sec}"
                    Width="*" />
                <DataGridTextColumn Header="CPA Dist"
                    Binding="{Binding CPADistance_NM, StringFormat={}{0:F2} NM}"
                    Width="*" />
                <DataGridTextColumn Header="Vertical Dist"
                    Binding="{Binding Vertical_ft, StringFormat={}{0:F2} ft}"
                    Width="*" />        
                <DataGridTextColumn Header="Area" Binding="{Binding AreaName1}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="75" Margin="5,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
