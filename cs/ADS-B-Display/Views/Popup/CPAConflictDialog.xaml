<mah:MetroWindow
    x:Class="ADS_B_Display.Views.CPAConflictDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="CPA Conflict List"
    Width="800"
    Height="400"
    Topmost="True"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  DataGrid for CPA Conflicts  -->
        <DataGrid
            x:Name="CpaDataGrid"
            Grid.Row="0"
            Margin="0,0,0,10"
            AutoGenerateColumns="False"
            BorderBrush="Gray"
            BorderThickness="1"
            CanUserAddRows="False"
            IsReadOnly="True"
            MouseDoubleClick="CpaDataGrid_MouseDoubleClick"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="40"
                    Binding="{Binding Index}"
                    Header="#" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding HexAddr1}"
                    Header="HexAddr1" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding HexAddr2}"
                    Header="HexAddr2" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TCPA_Seconds, StringFormat={}{0:F2} sec}"
                    Header="TCPA" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CPADistance_NM, StringFormat={}{0:F2} NM}"
                    Header="CPA Dist" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Vertical_ft, StringFormat={}{0:F2} ft}"
                    Header="Vertical Dist" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AreaName1}"
                    Header="Area" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="5,0"
                Click="CancelButton_Click"
                Content="Close" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
